#!/bin/bash

#
# (C) 2012 Nextworks SRL
#
# Written by: Francesco Salvestrini <f.salvestrini@nextworks.it>
#

ENV_DIR=.env

#

ME="env-activate"

TIMEOUT=5

ENV_FILE=${ENV_DIR}/bin/activate

if test ! -e $ENV_FILE ; then
    echo "${ME}: The environment activation file ($ENV_FILE)) seems missing"
    sleep $TIMEOUT
    exit 1
fi

. $ENV_FILE || {
    echo "${ME}: Cannot activate environment !!!"
    sleep $TIMEOUT
    exit 1
}
