#!/bin/bash

#
# (C) 2012 Nextworks SRL
#
# Written by: Francesco Salvestrini <f DOT salvestrini AT nextworks DOT it>
#

ENV_DIR=.env
REQ_FILE=.env.req

#

ME="env-create"

rm -r -f $ENV_DIR && virtualenv --python=python2.7 $ENV_DIR || {
    echo "${ME}: Cannot create environment"
    exit 1
}

(. ${ENV_DIR}/bin/activate && pip install -r $REQ_FILE) || {
    echo "${ME}: Cannot install environment related packages"
    exit 1
}
